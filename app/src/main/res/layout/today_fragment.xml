<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="today"
            type="hu.unideb.pedometer.ui.auth.UserData" />
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.today.Today">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text= "@={today.userName}" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@={today.password}" />

</FrameLayout>
</layout>